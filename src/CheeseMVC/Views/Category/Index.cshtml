@model List<CheeseMVC.Models.CheeseCategory>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No Categories yet!</p>
}



@foreach (var category in Model)
{
    <ul>@category.Name</ul>
}

<p>
    <a asp-controller="Category" asp-action="Add">Add a new Category</a>
    |
    <a asp-controller="Category" asp-action="Remove">Remove a Category</a>
</p>