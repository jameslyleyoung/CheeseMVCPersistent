@model CheeseMVC.ViewModels.ViewMenuViewModel

@{ 
    ViewBag.Title = "Model.Menu.Name";
}

<h1>@Model.Menu.Name</h1>

<ul>
@foreach (var item in Model.Items)
{
    <li>@item.Cheese.Name</li>
}
</ul>

<p>
    <a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID" >Add a Cheese</a>
    |
    <a asp-controller="Menu" asp-action="RemoveItem" asp-route-id="@Model.Menu.ID">Remove Cheeses</a>
</p>

