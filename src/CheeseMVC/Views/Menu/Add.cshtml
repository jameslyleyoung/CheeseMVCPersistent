}

<h1>Add Menu</h1>

<form asp-controller="Menu" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <input type="submit" value="Add Menu" />

</form>