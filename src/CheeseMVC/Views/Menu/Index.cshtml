@model List<CheeseMVC.Models.Menu>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No Menus yet!</p>
}

<!-- TODO 3: Check to see if no menus yet pops up when starting with an empty db.-->
<ul>
@foreach (var menu in Model)
{
    <li><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></li>
}

</ul>
<p>
    <a asp-controller="Menu" asp-action="Add">Add a Menu</a>
    |
    <a asp-controller="Menu" asp-action="Remove">Remove a Menu</a>
</p>

